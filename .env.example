# Office Wi-Fi Tracker Configuration
# Copy this file to .env and update with your settings

# Office Wi-Fi Configuration
OFFICE_WIFI_NAME=YourOfficeWiFiName

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8787

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=false
LOG_FILE_PATH=logs/app.log

# Work Duration Settings
WORK_DURATION_HOURS=4
BUFFER_MINUTES=10

# Check Intervals (in seconds)
WIFI_CHECK_INTERVAL_SECONDS=30
TIMER_CHECK_INTERVAL_SECONDS=60

# Testing Mode (set to true for 2-minute testing instead of 4 hours)
TEST_MODE=false
TEST_DURATION_MINUTES=2

# Data Directory Paths
DATA_DIR=data
ARCHIVE_DIR=data/archive
